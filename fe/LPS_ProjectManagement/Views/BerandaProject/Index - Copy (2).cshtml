    function hcXaxis() {
        return @Model.ProjectHeader.IsTransformation.ToString().ToLower() ? ['2019 Jan W1','2019 Jan W2','2019 Jan W3','2019 Jan W4', '2019 Jan W5', '2019 Feb W1','2019 Feb W2','2019 Feb W3','2019 Feb W4','2019 Mar W1','2019 Mar W2','2019 Mar W3','2019 Mar W4'] : ['Nov 2018', 'Des 2018', 'Jan 2019', 'Feb 2019', 'Mar 2019']
    }
    var hc = Highcharts.chart('container', {

        title: {
            text: 'Progress Project (@Model.ProjectHeader.Code / @Model.ProjectHeader.Name)'
        },

        //subtitle: {
        //    text: 'Department : LPS'
        //},

            xAxis: {
                categories: hcXaxis()
            },

        yAxis: {
            title: {
                text: 'Percentage'
            }
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle'
        },

        plotOptions: {
            series: {
                label: {
                    connectorAllowed: false
                },
                pointStart: 1
            }
        },

        series: [{
            name: 'Realisasi',
            data: [0, 5, 15, 25, 30]
        }, {
            name: 'Plan',
            data: [25, 50, 75, 100]
        }],

        responsive: {
            rules: [{
                condition: {
                    maxWidth: 500
                },
                chartOptions: {
                    legend: {
                        layout: 'horizontal',
                        align: 'center',
                        verticalAlign: 'bottom'
                    }
                }
            }]
        }

    });

    function GetURLParameter() {
                                                    var sPageURL = window.location.href;
                                                    var indexOfLastSlash = sPageURL.lastIndexOf("/");

                                                    if (indexOfLastSlash > 0 && sPageURL.length - 1 != indexOfLastSlash)
                                                        return sPageURL.substring(indexOfLastSlash + 1);
                                                    else
                                                        return 0;
                                                }

                                                //debugger;
        var ID = GetURLParameter();
        var model = {        IDProject : ID}

    function GetTask(data) {
                                                    //debugger;
                                                    var i;
                                                    var dataArray = [];
                                                    for (i = 0; i < data.ListTask.length; i++) {

                                                        dataArray.push({
                                                            TaskName: data.ListTask[i].TaskName, Plan: data.ListTask[i].Plan, Real: data.ListTask[i].Real
                                                        });
                                                }
        //$("#tableTask").dataTable().fnDestroy();

        $('#tableTask').DataTable({
                                                    "data": dataArray,
            "searching": false,
            "paging": false,
            "info": false,
            "columns": [
                {
                    "data": "TaskName"
                },
                    {
                        "data": "Plan"
                    },
                    {
                        "data": "Real"
                    }
            ]
        })
    }

    function GetConstraint(data) {
                                                    //debugger;
                                                    var i;
                                                    var dataArray = [];
                                                    for (i = 0; i < data.ListConstraint.length; i++) {

                                                        dataArray.push({
                                                            Constraint: data.ListConstraint[i].Constraint
                                                        });
                                                }
        //$("#tableTask").dataTable().fnDestroy();

        $('#tableConstraint').DataTable({
                                                    "data": dataArray,
            "searching": false,
            "paging": false,
            "info": false,
            "columns": [
                {
                    "data": "Constraint"
                }
            ]
        })
    }

    $(function () {
        GetDdlMinggu();
    });

    function GetWeeksInMonth() {
        var today = new Date();
        var year = document.getElementById("ddlTahun").value;
        var month = document.getElementById("ddlBulan").value-1;

        if (new Date(today.getFullYear(), today.getMonth()) < new Date(year, month)) return 0;

        var monthStart = new Date(year, month, 0);
        var monthEnd = (year == today.getFullYear() && month == today.getMonth()) ? today.getDate() : new Date(year, month+1, 0).getDate();

        return Math.ceil((monthStart.getDay() + monthEnd) / 7);
    }

    function GetDdlMinggu() {
        var currentSelected = document.getElementById("ddlMinggu").value;
        var weeksInMonth = GetWeeksInMonth();
        var html = "";
        for (i = 0; i < weeksInMonth; i++) {
            html = html.concat("<option>", (i+1), "</option>")
        }
        document.getElementById("ddlMinggu").innerHTML = html;
        document.getElementById("ddlMinggu").value = (currentSelected === "" || currentSelected > weeksInMonth) ? weeksInMonth : currentSelected;
    }

    function GetMilestoneTask(week) {
        alert('Get data for week ' + week + ' and replace below data');
    }
</script>
