<script>
    var Realisas = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Real)));
    var Target = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Target)));
    var Periode = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Periode)));
        Highcharts.chart('container', {

            title: {
                text: 'Progress Project (123-xxi-008 / Uji Coba)'
            },

            //subtitle: {
            //    text: 'Department : LPS'
            //},

            yAxis: {
                title: {
                    text: 'Percentage'
                }
            },
            xAxis: {
                categories: Periode
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle'
            },

            plotOptions: {
                series: {
                    label: {
                        connectorAllowed: false
                    },
                    pointStart: 1
                }
            },
            
            
            
            series: [{
                name: 'Realisasi',
                data: Realisas


            }, {
                name: 'Plan',
                data: Target
            }],

            responsive: {
                rules: [{
                    condition: {
                        maxWidth: 500
                    },
                    chartOptions: {
                        legend: {
                            layout: 'horizontal',
                            align: 'center',
                            verticalAlign: 'bottom'
                        }
                    }
                }]
            }

        });

        function GetURLParameter() {
            var sPageURL = window.location.href;
            var indexOfLastSlash = sPageURL.lastIndexOf("/");

            if (indexOfLastSlash > 0 && sPageURL.length - 1 != indexOfLastSlash)
                return sPageURL.substring(indexOfLastSlash + 1);
            else
                return 0;
        }

        debugger;
        var ID = GetURLParameter();
        var model = {
            IDProject : ID
        }

        function GetTask(data) {
            debugger;
            var i;
            var dataArray = [];
            for (i = 0; i < data.ListTask.length; i++) {

                dataArray.push({
                    TaskName: data.ListTask[i].TaskName, PIC: data.ListTask[i].PIC, Plan: data.ListTask[i].Plan, Real: data.ListTask[i].Real
                });
            }
            //$("#tableTask").dataTable().fnDestroy();

            $('#tableTask').DataTable({
                "data": dataArray,
                "searching": false,
                "paging": false,
                "info": false,
                "columns": [
                    {
                        "data": "TaskName"
                    },
                    {
                        "data": "PIC"
                    },
                     {
                         "data": "Plan"
                    }
                    ,
                      {
                          "data": "Real"
                      }
                ]
            })
        }

        function GetConstraint(data) {
            //debugger;
            var i;
            var dataArray = [];
            for (i = 0; i < data.ListConstraint.length; i++) {

                dataArray.push({
                    Constraint: data.ListConstraint[i].Constraint
                });
            }
            //$("#tableTask").dataTable().fnDestroy();

            $('#tableConstraint').DataTable({
                "data": dataArray,
                "searching": false,
                "paging": false,
                "info": false,
                "columns": [
                    {
                        "data": "Constraint"
                    }
                ]
            })
        }

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetProjectDetails", "BerandaProject")',
            data: model,
            traditional: true,
            success: function (results) {
                debugger;
                GetTask(results);
                GetConstraint(results);
            }
        });
</script>
