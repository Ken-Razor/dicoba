<style>
    .nopadding {
        padding: 0 !important;
        margin: 0 !important;
    }

    .thumb-pic {
        object-fit: cover;
        border-radius: 50%;
        height: 90px;
        width: 90px;
    }

    hr {
        display: block;
        margin-top: 0.5em;
        margin-bottom: 0.5em;
        margin-left: auto;
        margin-right: auto;
        border-style: inset;
        border-width: 1px;
    }

    /* width */
    ::-webkit-scrollbar {
        width: 3px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 2px grey;
        border-radius: 20px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #808080;
        border-radius: 20px;
        opacity: 0.5;
    }

    .task-table {
        width: 100%;
    }

        .task-table tr {
            border-bottom: 1px solid #e2e2e2;
            height: 70px;
        }

            .task-table tr td {
                max-width: 500px;
            }

    .task-status {
        width: 80%;
        height: 2em;
        border-radius: 100px;
        text-align: center;
        margin-right: 100px;
        margin-left: 20px;
        font-weight: bold;
        color: white;
    }

    .task-selesai {
        background-color: #46be8a;
    }

    .task-proses {
        background-color: #bea446;
    }
</style>


