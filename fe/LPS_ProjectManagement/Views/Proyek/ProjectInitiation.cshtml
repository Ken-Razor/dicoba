@model IEnumerable<LPS_ProjectManagement.Models.TransaksiDataModels.ProjectHeaderModel>

@{
    ViewBag.Title = "Project Initiation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Daftar Project</h2>
        </header>
        <div class="content-body padding-top-15">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <table id="tblListProjectCharter" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th style="white-space:nowrap; width:3%; text-align:center;">No.</th>
                                <th style="white-space:nowrap; text-align:left;">Kode Project</th>
                                <th style="white-space:nowrap; width:25%; text-align:left;">Nama Project</th>
                                <th style="white-space:nowrap; text-align:left;">Jenis Project</th>
                                <th style="white-space:nowrap; width:7%; text-align:center;">Tanggal Mulai</th>
                                <th style="white-space:nowrap; width:7%; text-align:center;">Tanggal Selesai</th>
                                <th style="white-space:nowrap; width:10%; text-align:left;">Status</th>
                                <th style="white-space:nowrap; width:7%; text-align:center;">Updated By</th>
                                <th style="white-space:nowrap; width:7%; text-align:center;">Updated Date</th>
                                <th style="white-space:nowrap; width:7%; text-align:center;">Approved By</th>
                                <th style="white-space:nowrap; text-align:center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.NoUrut)
                                </td>
                                <td style="text-align:left">
                                    @Html.DisplayFor(modelItem => item.ProjectModel.ProjectNo)
                                </td>
                                <td style="text-align:left">
                                    @Html.DisplayFor(modelItem => item.ProjectModel.ProjectName)
                                </td>

                                <td>
                                    @if (item.ProjectModel.IsTransformasi == true)
                                    {
                                        <span>Transformasi</span>
                                    }
                                    else
                                    {
                                        <span>Non Transformasi</span>
                                    }
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.StartYear)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.EndYear)
                                </td>
                                <td style="text-align:left">
                                    @Html.DisplayFor(modelItem => item.ProjectStatus.StatusName)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.UpdatedDateString)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.ApprovedBy)
                                </td>
                                <td style="text-align:center">
                                    <a href="@Url.Action("ProjectInitiationCreate", "Proyek", new {IDProjectHeader = item.IDProjectHeader})" class="btn btn-warning tooltipcustom">
                                        <i class="fa fa-edit"></i>
                                        <span class="tooltiptext">Detil</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<script>

    $(document).ready(function () {
        $('#tblListProjectCharter').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false,
            "scrollX": true
        });
    });

    function searchfunction() {
        var input, filter, table, tr, td, i;
        input = document.getElementById("txtSearch");
        filter = input.value.toUpperCase();
        table = document.getElementById("tblListProjectCharter");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

