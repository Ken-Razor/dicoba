
@{
    ViewBag.Title = "MasterProjectGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Daftar Proyek</h2>
            <div class="actions panel_actions pull-right">
                <i class="box_toggle material-icons">expand_more</i>
                <i class="box_close material-icons">close</i>
            </div>
        </header>
        <div class="content-body padding-top-45">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        <div class="col-md-4">
                            <button type="button" class="btn btn-info btn-corner" id="btnTambah" onclick="location.href='@Url.Action("DetailProjectGroup","Master")';"> <i class="fa fa-plus"></i>&nbsp;&nbsp; Tambah Akun</button>
                        </div>

                        <div class="col-md-2 pull-right">
                            <div class="input-group transparent pull-right">
                                <span class="input-group-addon">
                                    <span class="arrow"></span>
                                    <i class="fa fa-search"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Cari" id="txtSearch" onkeyup="searchfunction()">
                            </div>
                        </div>

                    </div>

                    <table id="tblListUser" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>No Project Group</th>
                                <th>Nama Project Group</th>
                                <th>Deslripsi</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>002/I/2018</td>
                                <td>Penguatan Budaya</td>
                                <td>Januari 2018</td>
                                <td>
                                    <a href="#" class="btn btn-warning tooltipcustom">
                                        <i class="fa fa-edit"></i>
                                        <span class="tooltiptext">Ubah</span>
                                    </a>
                                    <a href="#" class="btn btn-danger tooltipcustom">
                                        <i class="fa fa-trash"></i>
                                        <span class="tooltiptext">Hapus</span>
                                    </a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


<script>

    $('#btnTambah').mdl({
        type: 'modal',
        fullscreen: false,
        overlayClick: true
    });


    $(document).ready(function () {
        $('#tblListUser').DataTable({
            "bLengthChange": false,
            searching: false,
            info: false
        });
    });

    function searchfunction() {
        var input, filter, table, tr, td, i;
        input = document.getElementById("txtSearch");
        filter = input.value.toUpperCase();
        table = document.getElementById("tblListUser");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>

