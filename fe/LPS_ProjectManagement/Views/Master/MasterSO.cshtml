@model List<LPS_ProjectManagement.Models.MasterDataModels.StrategicObjectiveModel>

@{
    ViewBag.Title = "Master Data SO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Daftar SO</h2>
        </header>
        <div class="content-body padding-top-45">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <table id="tblListUser" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th style="text-align:center" width="3%">No.</th>
                                <th style="text-align:left" width="15%">Kode SO</th>
                                <th style="text-align:left">Nama SO</th>
                                <th style="text-align:left" width="15%">Tahun</th>
                                <th style="text-align:center">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                            <tr>
                                <td style="text-align:center">@data.NoUrut</td>
                                <td style="text-align:left">@data.StrategicObjectiveCode</td>
                                <td style="text-align:left">@data.StrategicObjectiveName</td>
                                <td style="text-align:left">@data.Year</td>
                                <td style="text-align:center">
                                    <a href="@Url.Action("DetailMasterSO","Master", new {IDStrategicObjective = data.IDStrategicObjective})" class="btn btn-info tooltipcustom margin-top-5 margin-bottom-5">
                                        <i class="fa fa-edit"></i>
                                        <span class="tooltiptext">Detil</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    
    $(document).ready(function () {
        $('#tblListUser').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false
        });
    });
    
    function deleteData(type, id) {
        var r;
        if (type == 1) {
            r = confirm("Anda yakin ingin menonaktifkan SO ini ?");
        }
        else {
            r = confirm("Anda yakin ingin mengaktifkan SO ini ?");
        }

        if (r == true) {
            var StrategicObjective = {
                IDStrategicObjective: id
            };
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeleteMasterSO", "Master")',
                data: StrategicObjective,
                success: function (result) {
                    alert(result.Message);
                    window.location.href = '@Url.Action("MasterSO", "Master")';
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                }
            });
        }
    }

</script>
