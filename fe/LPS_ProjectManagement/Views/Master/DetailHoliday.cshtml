@model LPS_ProjectManagement.Models.MasterDataModels.MasterHolidayModel
@using LPS_ProjectManagement.Models

@{
    ViewBag.Title = "Detil Hari Libur";
    Layout = "~/Views/Shared/_Layout.cshtml";
    RoleProject[] RoleAplikasi = (RoleProject[])Session["Roles"];
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <input id="hdf" type="hidden" value="@Session["PersonalNumber"].ToString()" />
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Detil Hari Libur</h2>
        </header>
        <div class="content-body padding-top-45">

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label" style="font-weight : bold;">Deskripsi</label>
                            <label style="color:red">*</label>
                            <div class="controls">
                                <div class="col-md-8 padding-left-0">
                                    <input id="txtNama" type="text" class="form-control" placeholder="Nama" value="@Model.Nama" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label" style="font-weight : bold;">Tanggal Mulai</label>
                            <label style="color:red">*</label>
                            <div class="controls">
                                <div class="col-md-8 padding-left-0">
                                    @if (Model.IDHoliday > 0)
                                    {
                                        <input id="txtDate" type="date" class="form-control" placeholder="Tanggal Mulai" value="@Model.TglMulai.ToString("yyyy-MM-dd")" />
                                    }
                                    else
                                    {
                                        <input id="txtDate" type="date" class="form-control" placeholder="Tanggal Mulai" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                    }

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label" style="font-weight : bold;">Tanggal Selesai</label>
                            <label style="color:red">*</label>
                            <div class="controls">
                                <div class="col-md-8 padding-left-0">
                                    @if (Model.IDHoliday > 0)
                                    {
                                        <input id="txtDate2" type="date" class="form-control" placeholder="Tanggal Selesai" value="@Model.TglSelesai.ToString("yyyy-MM-dd")" />
                                    }
                                    else
                                    {
                                        <input id="txtDate2" type="date" class="form-control" placeholder="Tanggal Selesai" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                    }

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <br />
            <div class="row">
                @if (Model.IDHoliday == 0)
                {
                    <button class="btn btn-success" onclick="insert()"> Tambah Hari Libur</button>
                }
                else
                {
                    <button class="btn btn-success" onclick="update(@Model.IDHoliday)"> Update Hari Libur</button>
                }
                <button class="btn btn-default" onclick="location.href='@Url.Action("MasterHoliday","Master")';"> Back To List</button>
            </div>
        </div>
    </section>
</div>

<script>

    $(document).ready(function () {

    });



    function insert() {
        var Program = {
            IdHoliday: 0,
            Nama: $('#txtNama').val(),
            TglMulai: $('#txtDate').val(),
            TglSelesai: $('#txtDate2').val(),
            Uuser: $('#hdf').val()
        };
        if (Program.Nama == "" | Program.Nama == null | Program.Nama == 0)
        {
            alert("Silahkan Isi Deskripsi!");
            return;
        }
        if (Program.TglMulai == "" | Program.TglMulai == null | Program.TglMulai == 0) {
            alert("Silahkan Isi Tanggal Mulai!");
            return;
        }
        if (Program.TglSelesai == "" | Program.TglSelesai == null) {
            alert("Silahkan isi Tanggal Selesai!");
            return;
        }
       

        $.ajax({
            type: "POST",
            url: '@Url.Action("InsertHoliday", "Master")',
            data: Program,
            success: function (result) {
                if (result.Result == "Success") {
                    alert(result.Message);
                    window.location.href = '@Url.Action("MasterHoliday", "Master")';
                }
                else {
                    alert(result.Message);
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

    function update(id) {
        debugger;
        var Program = {
            IdHoliday: id,
            Nama: $('#txtNama').val(),
            TglMulai: $('#txtDate').val(),
            TglSelesai: $('#txtDate2').val(),
            Uuser: $('#hdf').val()
        };
        if (Program.Nama == "" | Program.Nama == null | Program.Nama == 0) {
            alert("Silahkan Isi Deskripsi!");
            return;
        }
        if (Program.TglMulai == "" | Program.TglMulai == null | Program.TglMulai == 0) {
            alert("Silahkan Isi Tanggal Mulai!");
            return;
        }
        if (Program.TglSelesai == "" | Program.TglSelesai == null) {
            alert("Silahkan isi Tanggal Selesai!");
            return;
        }
        $.ajax({
            type: "POST",
            url: '@Url.Action("InsertHoliday", "Master")',
            data: Program,
            success: function (result) {
                alert(result.Message);
                window.location.href = '@Url.Action("MasterHoliday", "Master")';
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }
</script>
