@model List<LPS_ProjectManagement.Models.MasterDataModels.ProgramModel>
@using LPS_ProjectManagement.Models

@{
    ViewBag.Title = "Master Data Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
    RoleProject[] RoleAplikasi = (RoleProject[])Session["Roles"];
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Daftar Program</h2>
        </header>
        <div class="content-body padding-top-45">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        @if (RoleAplikasi.Any(x => x.Role == "CREATE.MASTER.PROGRAM"))
                        {
                        <div class="col-md-4">
                            <button type="button" class="btn btn-info btn-corner" id="btnTambah" onclick="location.href='@Url.Action("DetailProgram","Master", new {IDProgram = 0})'"> <i class="fa fa-plus"></i>&nbsp;&nbsp; Tambah Program</button>
                        </div>
                        }
                    </div>

                    <table id="tblListUser" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th style="text-align:center" width="3%">No.</th>
                                <th style="text-align:left" width="25%">Kode Program</th>
                                <th style="text-align:left">Nama Program</th>
                                <th style="text-align:center" width="12%">Updated By</th>
                                <th style="text-align:center" width="12%">Updated Date</th>
                                <th style="text-align:center" width="20%">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@data.NoUrut</td>
                                    <td style="text-align:left">@data.ProgramNo</td>
                                    <td style="text-align:left">@data.ProgramName</td>
                                    <td style="text-align:center">@data.UpdatedBy</td>
                                    <td style="text-align:center">@data.UpdatedDateString</td>
                                    <td style="text-align:center">
                                        <a href="@Url.Action("DetailProgram","Master", new {IDProgram= data.IDProgram})" class="btn btn-warning tooltipcustom margin-top-5 margin-bottom-5">
                                            <i class="fa fa-edit"></i>
                                            <span class="tooltiptext">Detil</span>
                                        </a>
                                        @if (RoleAplikasi.Any(x => x.Role == "DELETE.MASTER.PROGRAM"))
                                        {
                                            <a onclick="deleteData(@data.IDProgram)" class="btn btn-danger tooltipcustom margin-top-5 margin-bottom-5">
                                                <i class="fa fa-trash"></i>
                                                <span class="tooltiptext">Hapus</span>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


<script>

    $('#btnTambah').mdl({
        type: 'modal',
        fullscreen: false,
        overlayClick: true
    });


    $(document).ready(function () {
        $('#tblListUser').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false
        });
    });

    function deleteData(id) {
        var Program = {
            IDProgram: id
        };

        var r = confirm("Anda yakin ingin menghapus Program ini ?");
        if (r == true) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeleteProgram", "Master")',
                data: Program,
                success: function (result) {
                    if (result.Result === "Success") {
                        alert(result.Message);
                        window.location.href = '@Url.Action("MasterProgram", "Master")';
                    } else {
                        alert(result.Message);
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                }
            });
        }
    }

</script>

