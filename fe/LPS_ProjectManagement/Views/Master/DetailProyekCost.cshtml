@model LPS_ProjectManagement.Models.MasterDataModels.ProjectCostModel

@{
    ViewBag.Title = "Detil Kegiatan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input id="hdf" type="hidden" value="@Session["Nama"].ToString()" />

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Detil Kegiatan</h2>
        </header>
        <div class="content-body padding-top-45">

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="form-label" for="txtProjCostName" style="font-weight:bold">Nama Kegiatan</label>
                        <span class="desc"></span>
                        <input disabled="disabled" type="text" class="form-control" id="txtProjCostName" placeholder="Cost Name" value="@Model.ProjectCostName">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="form-label" for="txtProjCostCode" style="font-weight:bold">Kode Kegiatan</label>
                        <span class="desc"></span>
                        <input disabled="disabled" type="text" class="form-control" id="txtProjCostCode" placeholder="Cost Code" value="@Model.ProjectCostCode">
                    </div>
                </div>
            </div>

            <div class="row" hidden="hidden">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="form-label" for="txtParentCode" style="font-weight:bold">Kode Parent</label>
                        <span class="desc"></span>
                        <input disabled="disabled" type="text" class="form-control" id="txtParentCode" placeholder="Parent Code" value="@Model.ParentCode">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="form-label" for="txtAreaDescription" style="font-weight:bold">Deskripsi</label>
                        <span class="desc"></span>
                        <textarea id="txtAreaDescription" disabled="disabled" class="form-control" style="height:200px; border:solid" placeholder="Description">@Model.Description</textarea>
                        @*<div id="txtDescProjCost"></div>*@
                    </div>
                </div>
            </div>
            
            <br />
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    @*@if (Model.IDProjectCost == 0)
        {
        <button class="btn btn-success" onclick="insert()"> Tambah Cost</button>
        }
        else
        {
        <button class="btn btn-success" onclick="update(@Model.IDProjectCost)"> Update Cost</button>
        }*@
                </div>
            </div>
        </div>
    </section>
</div>

<script>

    var obj = @Html.Raw(Json.Encode(Model));
    var Description = obj.Description;
    
    function insert() {
        var ProjectCost = {
            ProjectCostCode: $('#txtProjCostCode').val(),
            ProjectCostName: $('#txtProjCostName').val(),
            Description: $('#txtDescProjCost').summernote('code'),
            CreatedBy: $('#hdf').val()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("InsertProyekCost", "Master")',
            data: ProjectCost,
            success: function (result) {
                if (result.Result === "Success") {
                    alert(result.Message);
                    window.location.href = '@Url.Action("MasterProyekCost", "Master")';
                } else {
                    alert(result.Message);
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

    function update(id) {
        var ProjectCost = {
            IDProjectCost: id,
            ProjectCostCode: $('#txtProjCostCode').val(),
            ProjectCostName: $('#txtProjCostName').val(),
            Description: $('#txtDescProjCost').summernote('code'),
            CreatedBy: $('#hdf').val()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateProyekCost", "Master")',
            data: ProjectCost,
            success: function (result) {
                if (result.Result = "Success") {
                    alert(result.Message);
                    window.location.href = '@Url.Action("MasterProyekCost", "Master")';
                } else {
                    alert(result.Message);
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

</script>
