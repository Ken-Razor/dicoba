<table style="width:100%;" id="tableData">

    <tr>
        <td colspan="10"></td>
    </tr>

    <tr>
        <td colspan="10"></td>
    </tr>

    <tr>
        <td colspan="10" style="text-align:center; font-size:14px;">
            <b>
                @if (Model.HeaderReport.IsTransformasi.ToString() == "Non Transformasi")
                {
                    <b>
                        LAMPIRAN 1 <br />
                        EVALUASI CAPAIAN PROYEK NON TRANSFORMASI BULAN @Model.HeaderReport.Bulan.ToString().ToUpper() @Model.HeaderReport.Year.ToString()
                    </b>
                }
                else if (Model.HeaderReport.IsTransformasi.ToString() == "Transformasi")
                {
                    <b>
                        LAMPIRAN 2 <br />
                        EVALUASI CAPAIAN PROYEK TRANSFORMASI BULAN @Model.HeaderReport.Bulan.ToString().ToUpper() @Model.HeaderReport.Year.ToString()
                    </b>
                }
                else
                {
                    <b>
                        DAFTAR PROYEK DAN KEGIATAN LEMBAGA TAHUN @Model.HeaderReport.Year.ToString() <br />
                        (PER STRATEGIC OBJECTIVE)
                    </b>
                }
            </b>
        </td>
    </tr>

    <tr>
        <td style="background-color:#86f442; font-size:14px;">
            Proyek Non Transformasi (Lampiran 1)
        </td>
        <td colspan="6"></td>
        <td colspan="3" style="text-align:left;">
            Pencapaian di atas target (>110%)
        </td>
    </tr>

    <tr>
        <td style="background-color:yellow; font-size:14px;">
            Proyek Transformasi (Lampiran 2)
        </td>
        <td colspan="6"></td>
        <td colspan="3" style="text-align:left;">
            Pencapaian sesuai target (100%-109%)
        </td>
    </tr>

    <tr>
        <td colspan="7"></td>
        <td colspan="3">
            Pencapaian sedikit di bawah target (85%-99%)
        </td>
    </tr>

    <tr>
        <td colspan="7"></td>
        <td colspan="3">
            Pencapaian jauh di bawah target (di bawah 85%)
        </td>
    </tr>

    @foreach (var item in Model.ListDataReport)
    {
        if (item.Tipe.ToString() == "SO")
        {
            <tr>
                <td colspan="10">&nbsp;</td>
            </tr>
            <tr>
                <td colspan="10">&nbsp;</td>
            </tr>
            <tr>
                <td colspan="10" style="background-color:#da9694; font-family:'Book Antiqua'; text-align:left; font-size:14px; color:black;"><label>@item.Name.ToString()</label></td>
            </tr>
        }
        if (item.Tipe.ToString() == "Program")
        {
            pointProgram = pointProgram + 1;
            if (pointProgram < 10) { Program = "0" + pointProgram.ToString() + ". "; }
            else { Program = pointProgram.ToString() + ". "; }
            pointProject = 0;
            <tr>
                <td colspan="9">&nbsp;</td>
            </tr>
            <tr>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Nama Proyek</td>
                <td colspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Keterangan</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Nilai (Rp. Juta)</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Target @Model.HeaderReport.Bulan.ToString() @Model.HeaderReport.Year.ToString()</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Realisasi @Model.HeaderReport.Bulan.ToString() @Model.HeaderReport.Year.ToString()</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Capaian @Model.HeaderReport.Bulan.ToString() @Model.HeaderReport.Year.ToString()</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Realisasi Ang.  @Model.HeaderReport.Bulan.ToString() @Model.HeaderReport.Year.ToString()</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Real+Komit @Model.HeaderReport.Bulan.ToString() @Model.HeaderReport.Year.ToString()</td>
                <td rowspan="2" style="background-color:#ffc000; border-top:1px solid; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; font-size:14px; vertical-align:central;">Tren<br />&nbsp;</td>
            </tr>
            <tr>
                <td style="background-color:#ffc000; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; vertical-align:central; font-size:14px;">PIC</td>
                <td style="background-color:#ffc000; border-bottom:1px solid; font-family:'Book Antiqua'; text-align:center; vertical-align:central; font-size:14px;">Waktu</td>
            </tr>
            <tr @*style="border-bottom:1px solid black; border-top:1px solid black;"*@>
                <td style="white-space:nowrap; font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@Program.ToString() @item.Name.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;">@item.PIC.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;">@item.Waktu.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">@item.Anggaran.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@item.Target.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@item.Realisasi.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">@Html.Raw(item.RealisasiPencapaian.ToString()) &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">@item.RealisasiAnggaran.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">@item.RealisasiKomit.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"></td>
            </tr>
        }
        if (item.Tipe.ToString() == "Project")
        {
            pointProject = pointProject + 1;
            Project = pointProject.ToString() + ". ";
            <tr @*style="border-bottom:1px solid black; border-top:1px solid black;"*@>
                @if (item.IsTransformasi.ToString() == "1")
                {
                    <td style="white-space:nowrap; background-color:yellow; font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@Project @item.Name.ToString()</td>
                }
                else if (item.IsTransformasi.ToString() == "0")
                {
                    <td style="white-space:nowrap; background-color:#86f442; font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@Project @item.Name.ToString()</td>
                }
                else
                {
                    <td style="white-space:nowrap; font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@Project @item.Name.ToString()</td>
                }
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><br />@item.PIC.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><br />@item.Waktu.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;"><br />@item.Anggaran.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@item.Target.ToString()</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:left;">@Html.Raw(item.Realisasi.ToString())</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">
                    <br />

                    @if (item.TrenCurrent == "Biru")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-Biru.png" alt="">
                    }
                    else if (item.TrenCurrent == "Hijau")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-Hijau.png" alt="">
                    }
                    else if (item.TrenCurrent == "Kuning")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-Kuning.png" alt="">
                    }
                    else if (item.TrenCurrent == "Merah")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-Merah.png" alt="">
                    }
                    else if (item.TrenCurrent == "Hitam")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-hitam.png" alt="">
                    }
                    else
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Bulet-Abu.png" alt="">
                    }

                    &nbsp; &nbsp;@Html.Raw(item.RealisasiPencapaian.ToString()) &nbsp; &nbsp;
                </td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;"><br />@item.RealisasiAnggaran.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;"><br />@item.RealisasiKomit.ToString() &nbsp; &nbsp;</td>
                <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:right;">
                    @if (item.Tren == "Naik")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Panah-atas.png" alt="">
                    }
                    else if (item.Tren == "Turun")
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Panah-bawah.png" alt="">
                    }
                    else
                    {
                        <img src="@ConfigurationManager.AppSettings["WebAPIProject"].ToString()Assets/Images/IconReport/Panah-kanan.png" alt="">
                    }
                </td>
                @*@if (item.Tren.ToString() == "Sama")
                    {
                        <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><span class="fa fa-arrow-right" style="color:orange;"></span></td>
                    }
                    else if (item.Tren.ToString() == "Naik")
                    {
                        <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><span class="fa fa-arrow-up" style="color:green;"></span></td>
                    }
                    else if (item.Tren.ToString() == "Turun")
                    {
                        <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><span class="fa fa-arrow-down" style="color:red;"></span></td>
                    }
                    else
                    {
                        <td style="font-family:'Book Antiqua'; font-size:14px; vertical-align:central; text-align:center;"><span class="fa fa-circle" style="color:grey;"></span></td>
                    }*@
            </tr>
        }
    }

</table>

