<body>

    <div class="container">

        <!-- Judul-->
        <div class="row">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12" style="margin-bottom: 0; padding-bottom:0;">
                    <h1 style="font-style: italic; font-weight:bold;">
                        PROJECT CHARTER
                    </h1>
                </div>
                <div class="col-md-12" style="margin-top: -15px; padding-top:-15px;">
                    <h2 style="font-weight:bold;">
                        @Model.Charter[0].Nama
                    </h2>
                </div>
            </div>
        </div>

        <!--1. Latar Belakang Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        1. Latar Belakang
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">

            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12" style="text-align: justify;">
                    @Html.Raw(Model.Charter[0].LatarBelakang.Replace('}', '>').Replace('{', '<'))
                </div>
            </div>
        </div>


        <!--2. Tujuan Project Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        2. Tujuan Project
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12" style="text-align: justify;">
                    @Html.Raw(Model.Charter[0].TujuanProject.Replace('}', '>').Replace('{', '<'))
                </div>
            </div>
        </div>


        <!--3. Ruang Lingkup Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        3. Ruang Lingkup
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12" style="text-align: justify;">
                    @Html.Raw(Model.Charter[0].RuangLingkup.Replace('}', '>').Replace('{', '<'))
                </div>
            </div>
        </div>

        <!--4. Project Stakholder Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        4. StakeHolder
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    Proyek ini dilaksanakan selama @Model.Charter[0].TotalBulan bulan, mulai dari @Model.Charter[0].Mulai sampai dengan @Model.Charter[0].Selesai.
                </div>
            </div>
            <div class="row margintop-10">
                <div class="col-md-12">
                    <table style="width:100%;">
                        <thead>
                            <tr style="background-color:#dfe3e8;">
                                <th style="text-align:center">Role</th>
                                <th style="text-align:center">Posisi</th>
                                <th style="text-align:center">Nama</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Stakeholder)
                            {
                                <tr>
                                    <td>@item.RoleName</td>
                                    <td>@item.Position</td>
                                    <td style="text-align: center;">@item.StakeHolder</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


        <!--5. Project Milestone Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        5. <i>Project Milestone</i>
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    Proyek ini dilaksanakan selama @Model.Charter[0].TotalBulan bulan, mulai dari @Model.Charter[0].Mulai sampai dengan @Model.Charter[0].Selesai.
                </div>
            </div>
            <div class="row margintop-10">
                <div class="col-md-12">
                    <table style="width:100%;">
                        <thead>
                            <tr style="background-color:#dfe3e8;">
                                <th style="text-align:center">No</th>
                                <th style="text-align:center">Milestone</th>
                                <th style="text-align:center">Selesai</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Milestone)
                            {
                                <tr style="background-color:@item.BGColor;">
                                    <td>@item.No</td>
                                    <td>@item.Aktivitas</td>
                                    <td style="text-align: center;">@item.Selesai</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>


        <!--6. Anggaran Proyek-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        6. Anggaran Proyek
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    @Html.Raw(Model.Charter[0].Budget.Replace('}', '>').Replace('{', '<'))
                </div>
            </div>
        </div>


        <!--7. Project Kendala, Asumsi dan Risiko Region-->

        <div class="row margintop-10">
            <div class="row  marginleft-5 marginright-5">
                <div class="col-md-12">
                    <h3>
                        7. Kendala, Asumsi dan Risiko
                    </h3>
                </div>
            </div>
            <div class="row  marginleft-10 marginright-10">
                <div class="col-md-12" style="border-bottom : 2px solid black">
                </div>
            </div>
        </div>
        <div class="row margintop-10">
            <div class="row margintop-10">
                <div class="col-md-12">
                    <table style="width:100%;">
                        <tbody>
                            @foreach (var item in Model.Approach)
                            {

                                <tr>
                                    <td style="font-style:initial;">@item.Type</td>
                                    <td>@Html.Raw(item.Value.Replace('}', '>').Replace('{', '<'))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

