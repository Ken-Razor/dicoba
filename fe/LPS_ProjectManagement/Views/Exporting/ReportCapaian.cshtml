@model LPS_ProjectManagement.Models.ReportModels.LaporanPencapaian
@{
    Layout = null;
    var bulan = ViewBag.Month;
    var tahun = ViewBag.Year;
    var Tipe = ViewBag.Tipe;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ReportCapaian</title>
</head>
<body>
    <style>
        .circle {
            border-radius: 50%;
            width: 3px;
            height: 3px;
            margin: auto;
            padding: 3px;
            /* width and height can be anything, as long as they're equal */
        }
        table {
            border-collapse: collapse;
        }
        thead, th, tbody, td {
            text-align: center;
            font-size: 11pt;
        }

        td {
            border-top: 1px dashed #ddd !important;
            border-bottom: 1px dashed #ddd !important;
        }
        thead {
            display: table-header-group;
            background-color: rgb(252,213,180) !important;
            border-top: 1px solid rgb(151,71,6) !important;
            height: 20px;
            border-bottom: 1px solid rgb(151,71,6) !important;
        }

        /*tr {
            border-bottom: 1px solid rgb(0,0,0);
        }*/
        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid;
        }

        th {
            background-color:rgb(252,213,180); border-color:rgb(151,71,6); border-width:2px;
        }

        body, h3, h2, h1 {
            font-family: 'Book Antiqua' !important;
            font-size:14pt;
        }

    </style>
    <div>

        @if (Model.Dir.Count > 0)
        {
            double total = Model.Dir.Sum(item => Convert.ToDouble(item.TotalAnggaran));
            double avgreal = Model.Dir.Average(item => Convert.ToDouble(item.Realisasi)) / 100;
            double avgrealkomit = Model.Dir.Average(item => Convert.ToDouble(item.Realkomit)) / 100;
            <center>
                <h2>Laporan Capaian Per Direktorat @bulan @tahun </h2>
            </center>
            <table style="width:100%">
                <thead>
                    <tr>
                        <th style="width:50%;">Direktorat</th>
                        <th style="width:13%;">Anggaran (Rp.Juta)</th>
                        <th style="width:5%;">Status</th>
                        <th style="width:9%;">Pencapaian  @bulan @tahun</th>
                        <th style="width:9%;">Realisasi Anggaran  @bulan @tahun</th>
                        <th style="width:9%;">Real + Komit  @bulan @tahun</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Dir)
                    {
                        if (item.NamaDirektorat == "Total")
                        {
                            <tr style="background-color:rgb(252,213,180)!important; border-top: 1px solid rgb(151,71,6)!important; height:20px!important; border-bottom: 1px solid rgb(151,71,6)!important; font-weight:bold!important;">
                                <td style="text-align:left">Total Anggaran</td>
                                <td style="text-align:right">@item.TotalAnggaran</td>
                                <td></td>
                                <td style="text-align:right">@item.RataPencapain %</td>
                                <td style="text-align:right">@item.Realisasi %</td>
                                <td style="text-align:right">@item.Realkomit %</td>
                            </tr>
                        } else
                        {                      
                        <tr>
                            <td style="text-align:left">@item.NamaDirektorat</td>
                            <td style="text-align:right">@item.TotalAnggaran</td>
                            <td>@Html.Raw(item.Status)</td>
                            <td style="text-align:right">@item.RataPencapain %</td>
                            <td style="text-align:right">@item.Realisasi %</td>
                            <td style="text-align:right">@item.Realkomit %</td>
                        </tr>
                        }
                    }
                    @*<tr style="background-color:rgb(252,213,180)!important; border-top: 1px solid rgb(151,71,6)!important; height:20px!important; border-bottom: 1px solid rgb(151,71,6)!important; font-weight:bold!important;">
                        <td style="text-align:left">Total Anggaran</td>
                        <td style="text-align:right">@String.Format("{0:N0}", total)</td>
                        <td></td>
                        <td></td>
                        <td style="text-align:right">@Math.Round(avgreal, 2) %</td>
                        <td style="text-align:right">@Math.Round(avgrealkomit, 2) %</td>
                    </tr>*@
                </tbody>

            </table>
        }

        @if (Model.SO.Count > 0)
        {
            double total = Model.SO.Sum(item => Convert.ToDouble(item.TotalAnggaran));
            double avgreal = Model.SO.Average(item => Convert.ToDouble(item.Realisasi)) / 100;
            double avgrealkomit = Model.SO.Average(item => Convert.ToDouble(item.Realkomit)) / 100;
            <center>
                <h2>Laporan Capaian Strategic Objective @bulan @tahun </h2>
            </center>
            <table style="width:100%">
                <thead>
                    <tr>
                        <th style="width:50%;">Strategic Objective</th>
                        <th style="width:13%;">Anggaran (Rp.Juta)</th>
                        <th style="width:5%;">Status</th>
                        <th style="width:9%;">Pencapaian @bulan @tahun</th>
                        <th style="width:9%;">Realisasi Anggaran @bulan @tahun</th>
                        <th style="width:9%;">Real + Komit @bulan @tahun</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SO)
                    {
                        <tr>
                            <td style="text-align:left">@item.NamaSO</td>
                            <td style="text-align:right">@item.TotalAnggaran</td>
                            <td>@Html.Raw(item.Status)</td>
                            <td style="text-align:right">@item.RataPencapain %</td>
                            <td style="text-align:right">@item.Realisasi %</td>
                            <td style="text-align:right">@item.Realkomit %</td>
                        </tr>
                    }
                        <tr style="background-color:rgb(252,213,180)!important; border-top: 1px solid rgb(151,71,6)!important; height:20px!important; border-bottom: 1px solid rgb(151,71,6)!important; font-weight:bold!important;">
                            <td style="text-align:left">Total Anggaran</td>
                            <td style="text-align:right">@String.Format("{0:N0}", total)</td>
                            <td></td>
                            <td></td>
                            <td style="text-align:right">@Math.Round(avgreal, 2) %</td>
                            <td style="text-align:right">@Math.Round(avgrealkomit, 2) %</td>
                        </tr>
                </tbody>

            </table>
        }

        @if (Model.Trans.Count > 0)
        {
            double total = Model.Trans.Sum(item => Convert.ToDouble(item.TotalAnggaran));
            double avgreal = Model.Trans.Average(item => Convert.ToDouble(item.Realisasi)) / 100;
            double avgrealkomit = Model.Trans.Average(item => Convert.ToDouble(item.Realkomit)) / 100;
            <center>
                <h2>Laporan Capaian Program @Tipe Program @bulan @tahun </h2>
            </center>
            <table style="width:100%">
                <thead>
                    <tr>
                        <th style="width:50%;">Program</th>
                        <th style="width:13%;">Anggaran (Rp.Juta)</th>
                        <th style="width:5%;">Status</th>
                        <th style="width:9%;">Pencapaian @bulan @tahun</th>
                        <th style="width:9%;">Realisasi Anggaran @bulan @tahun</th>
                        <th style="width:9%;">Real + Komit @bulan @tahun</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Trans)
                    {
                        if (item.NamaProgram == "Total")
                        {
                            <tr style="background-color:rgb(252,213,180)!important; border-top: 1px solid rgb(151,71,6)!important; height:20px!important; border-bottom: 1px solid rgb(151,71,6)!important; font-weight:bold!important;">
                                <td style="text-align:left">Total Anggaran</td>
                                <td style="text-align:right">@item.TotalAnggaran</td>
                                <td></td>
                                <td style="text-align:right">@item.RataPencapain %</td>
                                <td style="text-align:right">@item.Realisasi %</td>
                                <td style="text-align:right">@item.Realkomit %</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td style="text-align:left">@item.NamaProgram</td>
                                <td style="text-align:right">@item.TotalAnggaran</td>
                                <td>@Html.Raw(item.Status)</td>
                                <td style="text-align:right">@item.RataPencapain %</td>
                                <td style="text-align:right">@item.Realisasi %</td>
                                <td style="text-align:right">@item.Realkomit %</td>
                            </tr>
                        }

                    }

                </tbody>

            </table>
        }
    </div>

</body>
</html>
