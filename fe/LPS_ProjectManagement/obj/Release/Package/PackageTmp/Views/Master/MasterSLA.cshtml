@model List<LPS_ProjectManagement.Models.MasterDataModels.MasterSLAModel>
@using LPS_ProjectManagement.Models

@{
    ViewBag.Title = "Master SLA";
    Layout = "~/Views/Shared/_Layout.cshtml";
    RoleProject[] RoleAplikasi = (RoleProject[])Session["Roles"];
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Daftar SLA</h2>
        </header>
        <div class="content-body padding-top-45">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="row">
                        <div class="col-md-4">
                            <button type="button" class="btn btn-info btn-corner" id="btnTambah" onclick="location.href='@Url.Action("DetailSLA","Master", new {Id= 0})'"> <i class="fa fa-plus"></i>&nbsp;&nbsp; Tambah SLA</button>
                        </div>                       
                    </div>

                    <table id="tblListSLA" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th style="text-align:center" width="3%">No.</th>
                                <th style="text-align:left">Group</th>
                                <th style="text-align:left">Status SLA</th>
                                <th style="text-align:left">Peraturan</th>
                                <th style="text-align:left">Jasa Pelayanan</th>
                                <th style="text-align:left">Waktu</th>
                                <th style="text-align:left">Dihitung dari</th>
                                <th style="text-align:center" width="12%">Updated By</th>
                                <th style="text-align:center" width="12%">Updated Date</th>
                                <th style="text-align:center" width="20%">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var data in Model)
                            {
                                <tr>
                                    <td style="text-align:center">@data.NoUrut</td>
                                    <td style="text-align:left">@data.GroupName</td>
                                    <td style="text-align:left">@data.StatusSLA</td>
                                    <td style="text-align:left">@data.Peraturan</td>
                                    <td style="text-align:left">@data.JasaPelayanan</td>
                                    <td style="text-align:left">@data.Waktu</td>
                                    <td style="text-align:left">@data.DihitungDari</td>
                                    <td style="text-align:center">@data.Updateby</td>
                                    <td style="text-align:center">@data.UpdateDate2</td>
                                    <td style="text-align:center">
                                        <a href="@Url.Action("DetailSLA","Master", new {Id= data.Id})" class="btn btn-warning tooltipcustom margin-top-5 margin-bottom-5">
                                            <i class="fa fa-edit"></i>
                                            <span class="tooltiptext">Detil</span>
                                        </a>
                                        <a onclick="deleteData(@data.Id)" class="btn btn-danger tooltipcustom margin-top-5 margin-bottom-5">
                                            <i class="fa fa-trash"></i>
                                            <span class="tooltiptext">Hapus</span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


<script>

    $('#btnTambah').mdl({
        type: 'modal',
        fullscreen: false,
        overlayClick: true
    });


    $(document).ready(function () {
        $('#tblListSLA').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false
        });
    });

    function deleteData(id) {
        var Department = {
            Id: id
        };

        var r = confirm("Anda yakin ingin menghapus SLA ini ?");
        if (r == true) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeleteSLA", "Master")',
                data: Department,
                success: function (result) {
                    alert(result.Message);
                    window.location.href = '@Url.Action("MasterSLA", "Master")';
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                }
            });
        }
    }

</script>

