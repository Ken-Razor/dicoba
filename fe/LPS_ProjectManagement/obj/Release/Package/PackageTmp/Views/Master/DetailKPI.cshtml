    //    Description
    //);

    function insert() {
        var KPIOrganization = {
            KPICode: $('#txtKPICode').val(),
            KPIName: $('#txtKPIName').val(),
            Description: $('#txtDescKPI').summernote('code'),
            CreatedBy: $('#hdf').val()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("InsertKPI", "Master")',
            data: KPIOrganization,
            success: function (result) {
                alert(result.Message);
                window.location.href = '@Url.Action("MasterKPI", "Master")';
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

    function update(id) {
        var KPIOrganization = {
            IDKPIOrganization: id,
            KPICode: $('#txtKPICode').val(),
            KPIName: $('#txtKPIName').val(),
            Year: $('#txtKPIYear').val(),
            Description: $('#txtDescKPI').summernote('code'),
            CreatedBy: $('#hdf').val()
        };

        $.ajax({
            type: "POST",
            url: '@Url.Action("UpdateKPI", "Master")',
            data: KPIOrganization,
            success: function (result) {
                alert(result.Message);
                window.location.href = '@Url.Action("MasterKPI", "Master")';
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

</script>
