    //    toolbar: [
    //        ['style', ['style']],
    //        ['font', ['bold', 'italic', 'underline', 'strikethrough', 'superscript', 'subscript', 'clear']],
    //        ['fontname', ['fontname']],
    //        ['fontsize', ['fontsize']],
    //        ['color', ['color']],
    //        ['para', ['ol', 'ul', 'paragraph', 'height']],
    //        ['view', ['undo', 'redo']]
    //    ]
    //});

    //$('#txtDescKPI').summernote(
