@model IEnumerable<LPS_ProjectManagement.Models.TransaksiChangeManagementModels.ChangeManagementHeaderModel>

@{
    ViewBag.Title = "Project Changes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Project Changes</h2>
        </header>
        <div class="content-body padding-top-45">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <table id="tblListProjectCharter" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th style="white-space:nowrap; text-align:center; width:3%;">
                                    No.
                                </th>
                                <th style="white-space:nowrap; text-align:left; width:25%;">
                                    Nama Project
                                </th>
                                <th style="white-space:nowrap;">
                                    Nomor Project
                                </th>
                                <th style="white-space:nowrap;">Jenis Project</th>
                                <th style="white-space:nowrap;">
                                    Status Project
                                </th>
                                <th style="white-space:nowrap;">
                                    Updated By
                                </th>
                                <th style="white-space:nowrap;">
                                    Updated Date
                                </th>
                                <th style="white-space:nowrap;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoUrut)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProjectName)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.ProjectNo)</td>
                                    <td>
                                        @if (item.IsTransformasi == true)
                                        {
                                            <span>Transformasi</span>
                                        }
                                        else
                                        {
                                            <span>Non Transformasi</span>
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.StatusName)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedDateString)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ChangeManagementDetail", "Proyek", new {IDProjectHeader = item.IDProjectHeader})" class="btn btn-warning tooltipcustom">
                                            <i class="fa fa-edit"></i>
                                            <span class="tooltiptext">Detil</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

<script>

    $(document).ready(function () {
        $('#tblListProjectCharter').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false,
            "scrollX": true
        });
    });

</script>
