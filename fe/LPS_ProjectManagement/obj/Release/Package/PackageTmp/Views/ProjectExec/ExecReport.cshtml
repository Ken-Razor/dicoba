<script>
    $(document).ready(function () {
        $('.tab-group').tabify();
        $('#tblListProjectCharter').DataTable({
            "bLengthChange": false,
            searching: false,
            info: false,
            "bPaginate": false
        });
        $('#tblListProjectCharterTrend').DataTable({
            "bLengthChange": false,
            searching: false,
            info: false
        });
        $('#tblListProjectCharterPlan').DataTable({
            "bLengthChange": false,
            searching: false,
            info: false
        });

    });



    function searchfunction() {
        var input, filter, table, tr, td, i;
        input = document.getElementById("txtSearch");
        filter = input.value.toUpperCase();
        table = document.getElementById("tblListProjectCharter");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }

    function AddNew() {
        debugger;
        $.ajax({
            type: "get",
            url: '@Url.Action("ProjectCharterCreate", "Form")'
        });
    }
</script>

<script>

    function CheckBeforePeriode(IDProjectHeader, Periode) {
        debugger;
        var data = {
            IDProjectHeader: IDProjectHeader,
            Periode: Periode
        }
        var urlCheckBeforePeriode = '@Url.Action("CheckBeforePeriode", "ProjectExec")';

        $.ajax({
            type: "POST",
            url: urlCheckBeforePeriode,
            data: data,
            success: function (result) {
                if (result.Result === "Success") {
                    debugger;

                    window.location.href = "@Url.Action("ExecCreate", "ProjectExec")" + "?ProjectHeaderID=" + IDProjectHeader + "&Keys="+Periode;

                }
                else {
                    alert(result.Message);
                }
            }
        });

    }

</script>
