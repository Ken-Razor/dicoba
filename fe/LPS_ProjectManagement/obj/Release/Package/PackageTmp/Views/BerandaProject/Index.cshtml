                            <div class="row">
                                <table class="margin-left-30 task-table table-hover">
                                    @foreach (var data in Model.ListMilestone)
                                    {
                                        <tr>
                                            @if (@data.MilestoneProgress == "Completed")
                                            {
                                                <td style="width: 100px !important;  "><div class="task-status task-selesai">Completed</div></td>
                                            }
                                            else if (@data.MilestoneProgress == "Ongoing")
                                            {
                                                <td style="width: 100px !important; "><div class="task-status task-proses">Ongoing</div></td>
                                            }
                                            else if (@data.MilestoneProgress == "Due")
                                            {
                                                <td style="width: 100px !important; "><div class="task-status task-do">Due</div></td>
                                            }
                                            <td>@data.MilestoneTask</td>
                                            <td>
                                            <td>@data.Selesai</td>
                                        </tr>
                                    }
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
