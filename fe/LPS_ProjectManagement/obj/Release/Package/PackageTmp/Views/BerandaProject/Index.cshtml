    <script>
    var Realisas = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ListScurveReal)));
    var Target = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ListScurveTarget)));
    var Periode = @(Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Periode)));
    var Targets = Target.map(x => ({ week: parseInt(x.week), month: parseInt(x.month), year: parseInt(x.year), y: parseInt(x.y) }))
    var Realisasi = Realisas.map(x => ({ week: parseInt(x.week), month: parseInt(x.month), year: parseInt(x.year), y: parseInt(x.y) }))
        Highcharts.chart('container', {

            title: {
                text: '@Model.nama.ToString()'
            },

            //subtitle: {
            //    text: 'Department : LPS'
            //},

            yAxis: {
                title: {
                    text: 'Percentage'
                }
            },
            xAxis: {
                categories: Periode
            },
            legend: {
                layout: 'vertical',
                align: 'right',
                verticalAlign: 'middle'
            },

            plotOptions: {
                series: {
                    label: {
                        connectorAllowed: false
                    },
                    pointStart: 1,
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function () {
                                NewDashboard(this.week, this.month, this.year, @Request.QueryString["ID"].ToString());
                            }
                        }
                    }
                }
            },



            series: [{
                name: 'Realisasi',
                data: Realisasi


            }, {
                name: 'Plan',
                data: Targets
            }],

            responsive: {
                rules: [{
                    condition: {
                        maxWidth: 500
                    },
                    chartOptions: {
                        legend: {
                            layout: 'horizontal',
                            align: 'center',
                            verticalAlign: 'bottom'
                        }
                    }
                }]
            }

        });

        function GetURLParameter() {
            var sPageURL = window.location.href;
            var indexOfLastSlash = sPageURL.lastIndexOf("/");

            if (indexOfLastSlash > 0 && sPageURL.length - 1 != indexOfLastSlash)
                return sPageURL.substring(indexOfLastSlash + 1);
            else
                return 0;
        }

        debugger;
        var ID = GetURLParameter();
        var model = {
            IDProject : ID
        }

        function GetTask(data) {
            debugger;
            var i;
            var dataArray = [];
            for (i = 0; i < data.ListTask.length; i++) {

                dataArray.push({
                    TaskName: data.ListTask[i].TaskName, PIC: data.ListTask[i].PIC, Plan: data.ListTask[i].Plan, Real: data.ListTask[i].Real
                });
            }
            //$("#tableTask").dataTable().fnDestroy();

            $('#tableTask').DataTable({
                "data": dataArray,
                "searching": false,
                "paging": false,
                "info": false,
                "columns": [
                    {
                        "data": "TaskName"
                    },
                    {
                        "data": "PIC"
                    },
                     {
                         "data": "Plan"
                    }
                    ,
                      {
                          "data": "Real"
                      }
                ]
            })
        }

        function GetConstraint(data) {
            //debugger;
            var i;
            var dataArray = [];
            for (i = 0; i < data.ListConstraint.length; i++) {

                dataArray.push({
                    Constraint: data.ListConstraint[i].Constraint
                });
            }
            //$("#tableTask").dataTable().fnDestroy();

            $('#tableConstraint').DataTable({
                "data": dataArray,
                "searching": false,
                "paging": false,
                "info": false,
                "columns": [
                    {
                        "data": "Constraint"
                    }
                ]
            })
        }

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetProjectDetails", "BerandaProject")',
            data: model,
            traditional: true,
            success: function (results) {
                debugger;
                GetTask(results);
                GetConstraint(results);
            }
    });

    function NewDashboard(Week , Month , Year , projectheaderID) {
        location.href = '@Url.Action("Index", "BerandaProject")' + '?ID=' + projectheaderID + '&month=' + Month + '&year=' + Year + '&week=' + Week ;
    }
    </script>

