@model LPS_ProjectManagement.Models.DashboardModels.DashboardProjectDetails
@{

    ViewBag.Title = Model.nama.ToString();
    int[] Real = Model.ListScurve.Select(I => Convert.ToInt32(I.Realisasi)).ToArray();
    int[] Target = Model.ListScurve.Select(I => Convert.ToInt32(I.Target)).ToArray();
    string[] Periode = Model.ListScurve.Select(I => Convert.ToString(I.Periode)).ToArray();
}

