@model IEnumerable<LPS_ProjectManagement.Models.ReportModels.EvaluasiCapaianProyekModel>

@{
    ViewBag.Title = "Laporan Transformasi Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .big-col {
        width: 10px !important;
    }
</style>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">EVALUASI CAPAIAN PROYEK TRANSFORMASI BULAN OKTOBER 2018</h2>
            <div class="actions panel_actions pull-right">
                <i class="box_toggle material-icons">expand_more</i>
                <i class="box_close material-icons">close</i>
            </div>
        </header>
        <div class="content-body padding-top-45">
            <div class="row">
                <div class="col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="col-md-1"><i class="material-icons pull-right" style="color:blue">brightness_1</i></div>
                    <div class="col-md-2"><label>Pencapaian di atas target <br />( > 110% )</label></div>
                    <div class="col-md-1"><i class="material-icons pull-right" style="color:green">brightness_1</i></div>
                    <div class="col-md-2"><label>Pencapaian sesuai target <br />( 100% - 109% )</label></div>
                    <div class="col-md-1"><i class="material-icons pull-right" style="color:yellow">brightness_1 </i></div>
                    <div class="col-md-2"><label>Pencapaian sedikit di bawah target <br />( 85% - 99% )</label></div>
                    <div class="col-md-1"><i class="material-icons pull-right" style="color:red">brightness_1 </i></div>
                    <div class="col-md-2"><label>Pencapaian jauh di bawah target <br />( < 85% )</label></div>
                </div>
            </div>
            <div class="row">&nbsp;<br /></div>
            <div class="row">
                <div class="col-sm-12 col-xs-12 padding-left-0 padding-right-0">
                    <div class="col-md-12 dataTables_wrapper">
                        <table id="tblListProjectCharter" class="display nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th rowspan="2" style="white-space:nowrap"></th>
                                    <th colspan="2" style="text-align:center; white-space:nowrap">Keterangan</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Nilai (Rp. Juta)</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Target Oktober 2018</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Realisasi Oktober 2018</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Capaian Okt 2018</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Realisasi Ang.Okt</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Real+Komit Okt</th>
                                    <th rowspan="2" style="text-align:center; white-space:nowrap">Tren Okt thd Sep 2018</th>
                                </tr>
                                <tr>
                                    <th style="text-align:center; white-space:nowrap">PIC</th>
                                    <th style="text-align:center; white-space:nowrap">Waktu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td style="text-align:left; vertical-align:top">@data.Name</td>
                                        <td style="text-align:left">@data.PIC</td>
                                        <td style="text-align:left">@data.Waktu</td>
                                        <td style="text-align:right; vertical-align:top">@data.ContractIDR</td>
                                        <td style="text-align:left">@data.Target</td>
                                        <td style="text-align:left">@data.Realisasi</td>
                                        <td style="text-align:left">@data.Capaian</td>
                                        <td style="text-align:right; vertical-align:top">@data.RealisasiAnggaran</td>
                                        <td style="text-align:right; vertical-align:top">@data.RealisasiKomit</td>
                                        <td style="text-align:center; vertical-align:top"><span class="glyphicon glyphicon-arrow-up" style="color:green"></span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    var obj = @Html.Raw(Json.Encode(Model));
    $(document).ready(function () {

        var Name = [];

        for (var i = 0; i < obj.length; i++) {
            Name.push(obj[i].Name);
        }

        debugger;

        $('#tblListProjectCharter').DataTable({
            "bLengthChange": false,
            searching: true,
            info: false,
            "scrollX": true,
            order: false,
            "colReorder": true,
            scrollCollapse: true,
            fixedColumns: {
                leftColumns: 1
            }
        });
    });
</script>
